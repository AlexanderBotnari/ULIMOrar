<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        android:padding="8dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/timetableImageView"
                android:src="@drawable/timetable"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="24sp"
                android:id="@+id/sessionNameTextView"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintTop_toBottomOf="@+id/timetableImageView"
                android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timetableDateTextView"
                android:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:layout_margin="16dp"
                tools:layout_editor_absoluteX="-16dp"
                app:layout_constraintTop_toBottomOf="@+id/sessionNameTextView"
                android:layout_marginTop="16dp"/>
        <Button
                android:id="@+id/viewButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_arrow"
                app:iconGravity="textEnd"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:clipToOutline="true"
                app:strokeColor="@color/stroke_color"
                app:layout_constraintTop_toBottomOf="@+id/timetableDateTextView"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cornerRadius="16dp"/>

        <Button
                android:id="@+id/editTimetableButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:strokeColor="@color/stroke_color"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_edit"
                android:layout_marginTop="16dp"
                app:iconGravity="textEnd"
                app:layout_constraintTop_toBottomOf="@+id/timetableDateTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" tools:ignore="SpeakableTextPresentCheck"/>
        <Button
                android:id="@+id/deleteTimetableButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:strokeColor="@color/stroke_color"
                app:cornerRadius="16dp"
                app:layout_constraintStart_toEndOf="@+id/editTimetableButton"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:iconGravity="textEnd"
                app:icon="@drawable/ic_delete" tools:ignore="SpeakableTextPresentCheck"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>