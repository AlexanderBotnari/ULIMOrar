<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ULIMOrar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (set to grey). -->
        <item name="colorPrimary">@color/background_dark_theme</item>
        <item name="colorPrimaryDark">@color/background_dark_theme</item>
        <item name="colorPrimaryVariant">@color/background_dark_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_dark_theme</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/background_dark_theme</item>
        <!-- Status bar color. -->
        <item name="colorSurface">@color/background_dark_theme</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:colorBackground">@color/background_dark_theme</item>

        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
    </style>

    <style name="Theme.ULIMNoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_dark_theme</item>
        <item name="colorPrimaryVariant">@color/background_dark_theme</item>
        <item name="colorOnPrimary">@color/background_dark_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/background_dark_theme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:progressTint">@color/blue</item>
        <item name="android:colorBackground">@color/background_dark_theme</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.OutlinedButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.OutlinedButton" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.App.Button.OutlinedButton">
    </style>

    <style name="SymbolBackground" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AlertDialogCustomStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundTint">@color/background_dark_theme</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
